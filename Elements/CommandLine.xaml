<UserControl
    x:Class="Interactive.CommandLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Interactive"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="CustomRichEditBox.xaml"/>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="session/user>" Margin="0,0,0,0" FontFamily="Cascadia Code" FontSize="14" Foreground="White"/>
            <RichEditBox x:Name="box" TextAlignment="Left" AcceptsReturn="False" Style="{StaticResource CustomRichEditBoxStyle}" />
        </StackPanel>
    </Grid>

</UserControl>
